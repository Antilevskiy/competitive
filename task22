#include <iostream>
#include <math.h>
#include <string> 
using namespace std;

int main()
{   
  int N;
  int M;
  long long MOD = 1e9 + 7;
  cin >> N >> M;
  int w[N];
  long long s = 1;
  string str;
  for(int i = 0; i < N; i++)
  {
	  cin >> str;
	  w[i] = str.length();
  }  

  for(int i = 0; i < M; i++)
  {
	s = (s * 26) % MOD;  
  }
  long long A = 1; //считаем сколько способов разместить оставшиеся элементы  строке
  for(int i = 0; i < M - w[0]; i++)
  {
	  A = ((26 - M + w[0]) * (M - w[0]+1)) % MOD;
  }
  cout << A;
  for(int i = 0; i < N; i++)
  {
     s = (s % MOD - ( ((M - w[i] + 1) % MOD) * (A % MOD))) % MOD;
  }
  cout << s; 
 
  return 0;
 }
 
